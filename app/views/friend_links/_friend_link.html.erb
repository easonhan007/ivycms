<div id="<%= dom_id friend_link %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= friend_link.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= friend_link.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Sorting:</strong>
    <%= friend_link.sorting %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image:</strong>
    <%= friend_link.image %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this friend link", friend_link, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this friend link", edit_friend_link_path(friend_link), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
