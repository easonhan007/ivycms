<h2 class="my-4 text-2xl text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="my-4">
    <%= f.label :email, class: "my-2 block" %> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
  </div>

  <div class="my-4">
    <%= f.label :password, class: "my-2 block" %> 
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="my-4 flex align-baseline"> 
      <%= f.label :remember_me %>
      <%= f.check_box :remember_me, class: "checkbox ml-2" %>
    </div>
  <% end %>

  <div class="my-4 flex justify-end">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
