<div id="<%= dom_id inquiry %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= inquiry.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= inquiry.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= inquiry.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= inquiry.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ip:</strong>
    <%= inquiry.ip %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Product:</strong>
    <%= inquiry.product_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this inquiry", inquiry, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this inquiry", edit_inquiry_path(inquiry), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
