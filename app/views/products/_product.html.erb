<div id="<%= dom_id product %>">
  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Category')%>:</strong>
    <%= product.category.name %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Meta title')%>:</strong>
    <%= product.meta_title %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Name')%>:</strong>
    <%= product.name %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Keywords')%>:</strong>
    <%= product.key %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Description')%>:</strong>
    <%= product.desc %>
  </p>


  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Model')%>:</strong>
    <%= product.model_string %>
  </p>


  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64">URL:</strong>
    <%= product.url %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('New arrive')%>:</strong>
    <%= bool_text product.new_arrive %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Sorting')%>:</strong>
    <%= product.sorting %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Hot')%>:</strong>
    <%= bool_text product.hot %>
  </p>


  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Active')%>:</strong>
    <%= bool_text product.active %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1 w-64"><%= t('Specs')%>:</strong>
    <%= product.specs %>
  </p>

  <p class="my-5 flex gap-4">
    <strong class="block font-medium mb-1 w-64"><%= t('Content')%>:</strong>
    <%= product.content %>
  </p>

</div>
