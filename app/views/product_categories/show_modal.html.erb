<%= turbo_frame_tag "display_modal" do %>
<% kls = @product_category.active? ? "": "text-slate-400 dark:text-slate-600"%>
<dialog id="<%= "modal_#{dom_id(@product_category)}" %>" class="modal modal-bottom sm:modal-middle">
  <div class="modal-box">
    <div>
      <form method="dialog" class="<%= kls %>">
		<%= render_path(@product_category.path_to_category_arr())%>
		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3">ID:</strong>
			<p class="w-2/3"> <%= @product_category.id %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3"><%= t('Level')%>:</strong>
			<p class="w-2/3"> <%= @product_category.level %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3"><%= t('Name')%>:</strong>
			<p class="w-2/3"> <%= @product_category.name %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3"><%= t('Key')%>:</strong>
			<p class="w-2/3"> <%= @product_category.key %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3"><%= t('Description')%>:</strong>
			<p class="w-2/3"> <%= @product_category.description %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3">URL:</strong>
			<p class="w-2/3"> <%= @product_category.url %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3"><%= t('Sorting')%>:</strong>
			<p class="w-2/3"> <%= @product_category.sorting %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3"><%= t('Image')%>:</strong>
			<p class="w-2/3"> <%= @product_category.image %> </p>
		</div>

		<div class="my-4 flex justify-start">
			<strong class="block font-medium w-1/3"><%= t('Create At')%>:</strong>
			<p class="w-2/3"> <%= @product_category.created_at.to_fs(:db) %> </p>
		</div>
		<div class="modal-action">
	        <button class="btn">Close</button>
		</div>
      </form>
    </div>
  </div>
  <script>
	document.querySelector("#modal_<%= dom_id(@product_category) %>").showModal();
  </script>
</dialog>

<% end %>
