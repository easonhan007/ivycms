<% content_for :navi do %>
    <%= render partial: 'home/navi', locals: {opacity: true} %>
<% end %>

<% content_for :title do %>
	<title><%= t('Download') %></title>
<% end %>

<div class="container mx-auto my-4">
	<h3 class="text-2xl font-semibold my-4 w-1/2 mx-auto text-center"><%= t('Downloads')%></h3>
	<ul>
		<% @download_files.each do |file| %>
			<li class="my-2"><%= link_to file.name, file.content, class: 'link link-primary' if file.content.attached? %></li>
		<% end %>
	</ul>
</div>