<% content_for :navi do %>
    <%= render partial: 'home/navi', locals: {opacity: true} %>
<% end %>

<% content_for :title do %>
    <title><%= @category.name %></title>
<% end %>

<% if  @category.key.present? %>
  <%= render partial: 'home/seo_meta_title', locals: {title: @category.key} %>
<% end %>

<% if  @category.description.present? %>
  <%= render partial: 'home/seo_description', locals: {description: @category.description} %>
<% end %>

<div class="container mx-auto my-10">
	<h3 class="w-1/2 mx-auto text-center font-semibold text-2xl my-4"><%= @category.name.titleize %></h3>

	<% if @category.content.present? %>
		<div class="w-4/5 mx-auto">
			<%= @category.content %>
		</div>
	<% end %>


	<% if @resouces %>
		<div class="my-4 grid grid-flow-row grid-cols-1 md:grid-cols-2 gap-4 md:gap-12">
			<% @resouces.each do |resouce| %>
				<%= render partial: 'home/full_post_card', locals: {post: resouce, default_img: @post_default_img} %>	
			<% end %>
		</div>

		<div class="flex justify-center my-4">
		    <%== pagy_nav(@pagy) %>
		</div>
	<% end %>
</div>