<div class="overflow-x-auto m-2">
  <%= link_to t('New Banner'), new_post_category_path, class: "btn btn-primary my-2 btn-sm" %>
  <table class="table table-md my-4">
    <thead>
      <tr>
        <th><%= t('Image') %></th>
        <th><%= t('Sorting') %></th>
        <th><%= t('Name') %></th>
        <th><%= t('Created At') %></th>
        <th><%= t('Updated At') %></th>
        <th><%= t('Operation') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @banners.each do |banner| %>
        <tr>
          <%= banner_img_td(banner) %>
          <td><%= banner.sorting %></td>
          <td><%= banner.image %> </td>
          <td><%= time_ago_in_words banner.created_at %> <%= t('ago')%></td>
          <td><%= time_ago_in_words banner.updated_at %> <%= t('ago')%></td>
          <td> <%= link_to t('Edit'), edit_banner_path(banner), class: 'link link-info' %> </td>  
          <td><%= render partial: 'admin/confirm_modal', 
            locals: {
              action_text: t('Delete'), 
              action_obj: banner, 
              action_link: link_to(t('Yes'), banner_path(banner), class: "btn btn-error", data: {turbo_method: 'delete'})}%>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>